                <script>
                    const articleId = <%= article.id %>;

                    // Toggle do formul√°rio de coment√°rios
                    function toggleCommentForm() {
                        const container = document.getElementById('commentFormContainer');
                        const btn = document.getElementById('btnToggleCommentForm');

                        if (container.style.display === 'none') {
                            container.style.display = 'block';
                            btn.innerHTML = '<i class="fas fa-minus-circle"></i> Fechar formul√°rio';
                            btn.classList.add('active');
                            // Scroll suave at√© o formul√°rio
                            container.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                        } else {
                            container.style.display = 'none';
                            btn.innerHTML = '<i class="fas fa-plus-circle"></i> Deixe seu coment√°rio';
                            btn.classList.remove('active');
                        }
                    }

                    // Carregar coment√°rios do sistema
                    async function loadComments() {
                        try {
                            const response = await fetch(`/api/comments/${articleId}`);
                            const data = await response.json();

                            if (data.success) {
                                displayComments(data.comments);
                                document.getElementById('commentCount').textContent = data.comments.length;
                            }
                        } catch (error) {
                            console.error('Erro ao carregar coment√°rios:', error);
                            document.getElementById('commentsList').innerHTML =
                                '<p class="error-message"><i class="fas fa-exclamation-circle"></i> Erro ao carregar coment√°rios</p>';
                        }
                    }

                    // Exibir coment√°rios
                    function displayComments(comments) {
                        const container = document.getElementById('commentsList');

                        if (comments.length === 0) {
                            container.innerHTML = '<p class="no-comments"><i class="fas fa-info-circle"></i> Nenhum coment√°rio ainda. Seja o primeiro a comentar!</p>';
                            return;
                        }

                        container.innerHTML = comments.map(comment => `
            <div class="comment-item">
                <div class="comment-header">
                    <div class="comment-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="comment-info">
                        <strong class="comment-author">${escapeHtml(comment.nome)}</strong>
                        <span class="comment-date">
                            <i class="fas fa-clock"></i> 
                            ${formatDate(comment.created_at)}
                        </span>
                    </div>
                </div>
                <div class="comment-body">
                    ${escapeHtml(comment.comentario)}
                </div>
            </div>
        `).join('');
                    }

                    // Enviar coment√°rio
                    async function submitComment(event) {
                        event.preventDefault();

                        const form = event.target;
                        const btn = document.getElementById('btnSubmitComment');
                        const originalText = btn.innerHTML;

                        btn.disabled = true;
                        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Enviando...';

                        try {
                            const formData = {
                                nome: form.nome.value,
                                email: form.email.value,
                                comentario: form.comentario.value,
                                captcha: form.captcha.value
                            };

                            const response = await fetch(`/api/comments/${articleId}`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify(formData)
                            });

                            const data = await response.json();

                            if (data.success) {
                                alert('‚úÖ ' + data.message);
                                form.reset();
                                await loadComments();
                            } else {
                                alert('‚ùå ' + data.error);
                            }
                        } catch (error) {
                            console.error('Erro ao enviar coment√°rio:', error);
                            alert('‚ùå Erro ao enviar coment√°rio. Tente novamente.');
                        } finally {
                            btn.disabled = false;
                            btn.innerHTML = originalText;
                        }
                    }

                    // Utilit√°rios
                    function escapeHtml(text) {
                        const div = document.createElement('div');
                        div.textContent = text;
                        return div.innerHTML;
                    }

                    function formatDate(dateString) {
                        const date = new Date(dateString);
                        const now = new Date();
                        const diff = Math.floor((now - date) / 1000); // diferen√ßa em segundos

                        if (diff < 60) return 'Agora mesmo';
                        if (diff < 3600) return Math.floor(diff / 60) + ' minutos atr√°s';
                        if (diff < 86400) return Math.floor(diff / 3600) + ' horas atr√°s';
                        if (diff < 604800) return Math.floor(diff / 86400) + ' dias atr√°s';

                        return date.toLocaleDateString('pt-BR', {
                            day: '2-digit',
                            month: 'short',
                            year: 'numeric'
                        });
                    }

                    // Carregar coment√°rios ao iniciar
                    document.addEventListener('DOMContentLoaded', function () {
                        loadComments();
                    });
                </script>

