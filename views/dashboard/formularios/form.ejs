<%- include('../partials/header', { title: isEdit ? 'Editar Formulário' : 'Novo Formulário', user: user }) %>

<div class="dashboard-content">
    <div class="content-header">
        <div>
            <h1><%= isEdit ? 'Editar Formulário' : 'Novo Formulário' %></h1>
            <p><%= isEdit ? 'Atualize as configurações do formulário' : 'Crie um novo formulário dinâmico' %></p>
        </div>
        <a href="/dashboard/formularios" class="btn btn-secondary">
            ← Voltar
        </a>
    </div>

    <form action="<%= isEdit ? `/dashboard/formularios/${form.id}/atualizar` : '/dashboard/formularios/criar' %>" method="POST" class="form-builder" onsubmit="return prepareSubmit()">
        <div class="form-grid">
            <!-- Coluna Principal -->
            <div class="form-main">
                <!-- Informações Básicas -->
                <div class="card">
                    <div class="card-header">
                        <h3>Informações Básicas</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="nome">Nome do Formulário *</label>
                            <input type="text" id="nome" name="nome" class="form-control"
                                value="<%= isEdit ? form.nome : '' %>"
                                placeholder="Ex: Formulário de Contato" required>
                        </div>

                        <div class="form-group">
                            <label for="descricao">Descrição</label>
                            <textarea id="descricao" name="descricao" class="form-control" rows="2"
                                placeholder="Descrição interna do formulário..."><%= isEdit && form.descricao ? form.descricao : '' %></textarea>
                        </div>
                    </div>
                </div>

                <!-- Construtor de Campos -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-th-list"></i> Campos do Formulário</h3>
                        <button type="button" class="btn btn-sm btn-primary" onclick="adicionarCampo()">
                            <i class="fas fa-plus"></i> Adicionar Campo
                        </button>
                    </div>
                    <div class="card-body">
                        <div id="camposContainer">
                            <!-- Campos serão adicionados aqui via JavaScript -->
                        </div>
                        <div id="emptyState" class="empty-fields">
                            <i class="fas fa-mouse-pointer"></i>
                            <p>Clique em "Adicionar Campo" para começar a construir seu formulário</p>
                        </div>
                    </div>
                </div>

                <!-- Preview -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-eye"></i> Preview do Formulário</h3>
                    </div>
                    <div class="card-body">
                        <div id="formPreview" class="form-preview">
                            <p class="preview-empty">Adicione campos para ver o preview</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="form-sidebar">
                <!-- Configurações -->
                <div class="card">
                    <div class="card-header">
                        <h3>Configurações</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="checkbox-label">
                                <input type="checkbox" name="ativo" <%= !isEdit || form.ativo ? 'checked' : '' %>>
                                <span>Formulário Ativo</span>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="textoBotao">Texto do Botão</label>
                            <input type="text" id="textoBotao" name="textoBotao" class="form-control"
                                value="<%= isEdit && form.textoBotao ? form.textoBotao : 'Enviar' %>"
                                placeholder="Enviar">
                        </div>

                        <div class="form-group">
                            <label for="emailNotificacao">Email para Notificação</label>
                            <input type="email" id="emailNotificacao" name="emailNotificacao" class="form-control"
                                value="<%= isEdit && form.emailNotificacao ? form.emailNotificacao : '' %>"
                                placeholder="email@exemplo.com">
                            <small class="form-text">Opcional: receba notificações de novos envios</small>
                        </div>
                    </div>
                </div>

                <!-- Mensagem de Sucesso -->
                <div class="card">
                    <div class="card-header">
                        <h3>Mensagem de Sucesso</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <textarea id="mensagemSucesso" name="mensagemSucesso" class="form-control" rows="3"
                                placeholder="Mensagem exibida após envio..."><%= isEdit && form.mensagemSucesso ? form.mensagemSucesso : 'Formulário enviado com sucesso! Entraremos em contato em breve.' %></textarea>
                        </div>
                    </div>
                </div>

                <!-- Botões de Ação -->
                <div class="card">
                    <div class="card-body">
                        <input type="hidden" id="campos" name="campos" value="">
                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-save"></i> <%= isEdit ? 'Atualizar' : 'Criar' %> Formulário
                        </button>
                        <a href="/dashboard/formularios" class="btn btn-secondary btn-block">
                            Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Modal para Editar Campo -->
<div id="campoModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Adicionar Campo</h3>
            <button type="button" class="modal-close" onclick="fecharModal()">&times;</button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>Tipo de Campo *</label>
                <select id="campoTipo" class="form-control" onchange="atualizarOpcoesModal()">
                    <option value="text">Texto (uma linha)</option>
                    <option value="textarea">Área de Texto (múltiplas linhas)</option>
                    <option value="email">Email</option>
                    <option value="tel">Telefone</option>
                    <option value="number">Número</option>
                    <option value="select">Lista de Seleção</option>
                    <option value="radio">Opções (Radio)</option>
                    <option value="checkbox">Caixas de Seleção</option>
                    <option value="date">Data</option>
                </select>
            </div>

            <div class="form-group">
                <label>Rótulo (Label) *</label>
                <input type="text" id="campoLabel" class="form-control" placeholder="Ex: Nome Completo">
            </div>

            <div class="form-group">
                <label>Nome do Campo (identificador) *</label>
                <input type="text" id="campoName" class="form-control" placeholder="Ex: nome_completo">
                <small class="form-text">Use apenas letras, números e underline</small>
            </div>

            <div class="form-group">
                <label>Placeholder</label>
                <input type="text" id="campoPlaceholder" class="form-control" placeholder="Texto de exemplo...">
            </div>

            <div id="opcoesContainer" class="form-group" style="display: none;">
                <label>Opções (uma por linha)</label>
                <textarea id="campoOpcoes" class="form-control" rows="4" placeholder="Opção 1&#10;Opção 2&#10;Opção 3"></textarea>
            </div>

            <div class="form-group">
                <label class="checkbox-label">
                    <input type="checkbox" id="campoRequired">
                    <span>Campo Obrigatório</span>
                </label>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" onclick="fecharModal()">Cancelar</button>
            <button type="button" class="btn btn-primary" onclick="salvarCampo()">
                <i class="fas fa-check"></i> Salvar Campo
            </button>
        </div>
    </div>
</div>

