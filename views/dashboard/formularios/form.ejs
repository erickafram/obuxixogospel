<script>
    // Dados dos campos
    let campos = [];
    let editingIndex = -1;

    // Carregar campos existentes
    <% if (isEdit && form.campos) { %>
    campos = <%- JSON.stringify(form.campos) %>;
    <% } %>

    // Inicializar
    document.addEventListener('DOMContentLoaded', function() {
        renderizarCampos();
        atualizarPreview();
    });

    function adicionarCampo() {
        editingIndex = -1;
        document.getElementById('modalTitle').textContent = 'Adicionar Campo';
        limparModal();
        atualizarOpcoesModal();
        document.getElementById('campoModal').style.display = 'flex';
    }

    function editarCampo(index) {
        editingIndex = index;
        const campo = campos[index];
        
        document.getElementById('modalTitle').textContent = 'Editar Campo';
        document.getElementById('campoTipo').value = campo.type;
        document.getElementById('campoLabel').value = campo.label;
        document.getElementById('campoName').value = campo.name;
        document.getElementById('campoPlaceholder').value = campo.placeholder || '';
        document.getElementById('campoRequired').checked = campo.required || false;
        
        if (campo.options) {
            document.getElementById('campoOpcoes').value = campo.options.join('\n');
        }
        
        atualizarOpcoesModal();
        document.getElementById('campoModal').style.display = 'flex';
    }

    function removerCampo(index) {
        if (confirm('Tem certeza que deseja remover este campo?')) {
            campos.splice(index, 1);
            renderizarCampos();
            atualizarPreview();
        }
    }

    function limparModal() {
        document.getElementById('campoTipo').value = 'text';
        document.getElementById('campoLabel').value = '';
        document.getElementById('campoName').value = '';
        document.getElementById('campoPlaceholder').value = '';
        document.getElementById('campoOpcoes').value = '';
        document.getElementById('campoRequired').checked = false;
    }

    function fecharModal() {
        document.getElementById('campoModal').style.display = 'none';
    }

    function atualizarOpcoesModal() {
        const tipo = document.getElementById('campoTipo').value;
        const opcoesContainer = document.getElementById('opcoesContainer');
        
        if (['select', 'radio', 'checkbox'].includes(tipo)) {
            opcoesContainer.style.display = 'block';
        } else {
            opcoesContainer.style.display = 'none';
        }
    }

    function salvarCampo() {
        const tipo = document.getElementById('campoTipo').value;
        const label = document.getElementById('campoLabel').value.trim();
        const name = document.getElementById('campoName').value.trim();
        const placeholder = document.getElementById('campoPlaceholder').value.trim();
        const required = document.getElementById('campoRequired').checked;
        const opcoesText = document.getElementById('campoOpcoes').value.trim();

        if (!label) {
            alert('O rótulo é obrigatório');
            return;
        }

        if (!name) {
            alert('O nome do campo é obrigatório');
            return;
        }

        if (!/^[a-zA-Z_][a-zA-Z0-9_]*$/.test(name)) {
            alert('O nome do campo deve começar com letra ou underscore e conter apenas letras, números e underscores');
            return;
        }

        // Verificar nome duplicado
        const isDuplicate = campos.some((c, i) => c.name === name && i !== editingIndex);
        if (isDuplicate) {
            alert('Já existe um campo com este nome');
            return;
        }

        const campo = {
            type: tipo,
            label: label,
            name: name,
            placeholder: placeholder,
            required: required
        };

        if (['select', 'radio', 'checkbox'].includes(tipo)) {
            const opcoes = opcoesText.split('\n').filter(o => o.trim());
            if (opcoes.length === 0) {
                alert('Adicione pelo menos uma opção');
                return;
            }
            campo.options = opcoes;
        }

        if (editingIndex >= 0) {
            campos[editingIndex] = campo;
        } else {
            campos.push(campo);
        }

        fecharModal();
        renderizarCampos();
        atualizarPreview();
    }

    function renderizarCampos() {
        const container = document.getElementById('camposContainer');
        const emptyState = document.getElementById('emptyState');

        if (campos.length === 0) {
            container.innerHTML = '';
            emptyState.style.display = 'block';
            return;
        }

        emptyState.style.display = 'none';

        const tipoLabels = {
            text: 'Texto',
            textarea: 'Área de Texto',
            email: 'Email',
            tel: 'Telefone',
            number: 'Número',
            select: 'Lista de Seleção',
            radio: 'Opções (Radio)',
            checkbox: 'Caixas de Seleção',
            date: 'Data'
        };

        container.innerHTML = campos.map((campo, index) => `
            <div class="campo-item" data-index="${index}">
                <div class="campo-drag">
                    <i class="fas fa-grip-vertical"></i>
                </div>
                <div class="campo-info">
                    <div class="campo-label">${campo.label}</div>
                    <div class="campo-meta">
                        <span><i class="fas fa-tag"></i> ${tipoLabels[campo.type] || campo.type}</span>
                        <span><i class="fas fa-code"></i> ${campo.name}</span>
                        ${campo.required ? '<span class="campo-required"><i class="fas fa-asterisk"></i> Obrigatório</span>' : ''}
                    </div>
                </div>
                <div class="campo-actions">
                    <button type="button" onclick="editarCampo(${index})" title="Editar">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button type="button" class="btn-danger" onclick="removerCampo(${index})" title="Remover">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
        `).join('');

        // Inicializar drag and drop
        initSortable();
    }

    function initSortable() {
        const container = document.getElementById('camposContainer');
        if (typeof Sortable !== 'undefined') {
            new Sortable(container, {
                handle: '.campo-drag',
                animation: 150,
                onEnd: function(evt) {
                    const item = campos.splice(evt.oldIndex, 1)[0];
                    campos.splice(evt.newIndex, 0, item);
                    atualizarPreview();
                }
            });
        }
    }

    function atualizarPreview() {
        const preview = document.getElementById('formPreview');

        if (campos.length === 0) {
            preview.innerHTML = '<p class="preview-empty">Adicione campos para ver o preview</p>';
            return;
        }

        preview.innerHTML = campos.map(campo => {
            const requiredStar = campo.required ? '<span class="required-star">*</span>' : '';
            let input = '';

            switch (campo.type) {
                case 'textarea':
                    input = `<textarea placeholder="${campo.placeholder || ''}" ${campo.required ? 'required' : ''}></textarea>`;
                    break;
                case 'select':
                    const options = (campo.options || []).map(o => `<option value="${o}">${o}</option>`).join('');
                    input = `<select ${campo.required ? 'required' : ''}><option value="">Selecione...</option>${options}</select>`;
                    break;
                case 'radio':
                    input = `<div class="preview-radio-group">${(campo.options || []).map((o, i) => 
                        `<label><input type="radio" name="preview_${campo.name}" value="${o}"> ${o}</label>`
                    ).join('')}</div>`;
                    break;
                case 'checkbox':
                    input = `<div class="preview-checkbox-group">${(campo.options || []).map((o, i) => 
                        `<label><input type="checkbox" name="preview_${campo.name}" value="${o}"> ${o}</label>`
                    ).join('')}</div>`;
                    break;
                default:
                    input = `<input type="${campo.type}" placeholder="${campo.placeholder || ''}" ${campo.required ? 'required' : ''}>`;
            }

            return `
                <div class="preview-field">
                    <label>${campo.label} ${requiredStar}</label>
                    ${input}
                </div>
            `;
        }).join('');
    }

    function prepareSubmit() {
        if (campos.length === 0) {
            alert('Adicione pelo menos um campo ao formulário');
            return false;
        }

        document.getElementById('campos').value = JSON.stringify(campos);
        return true;
    }

    // Auto-gerar nome do campo a partir do label
    document.getElementById('campoLabel').addEventListener('input', function() {
        if (editingIndex < 0) {
            const name = this.value
                .toLowerCase()
                .normalize('NFD')
                .replace(/[\u0300-\u036f]/g, '')
                .replace(/[^a-z0-9\s]/g, '')
                .replace(/\s+/g, '_')
                .replace(/_+/g, '_')
                .replace(/^_|_$/g, '');
            
            document.getElementById('campoName').value = name;
        }
    });
</script>

