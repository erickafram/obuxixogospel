<%- include('../partials/header', { title: 'Posts' , user: user }) %>

    <div class="dashboard-content">
        <div class="content-header">
            <div>
                <h1>Posts</h1>
                <p>Gerencie todos os artigos do portal</p>
            </div>
            <div class="header-actions">
                <button id="btnDeleteSelected" class="btn btn-danger" style="display: none;" onclick="deleteSelected()">
                    <i class="fas fa-trash"></i> Excluir Selecionados
                </button>
                <a href="/dashboard/posts/novo" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Post
                </a>
            </div>
        </div>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>

        <!-- Filtros e Busca -->
        <div class="filters-container">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" 
                       id="searchInput" 
                       placeholder="Buscar por título, descrição ou autor..." 
                       value="<%= filters.search || '' %>"
                       onkeypress="if(event.key === 'Enter') performSearch()">
                <% if (filters.search) { %>
                    <button class="clear-search" onclick="clearSearch()" title="Limpar busca">
                        <i class="fas fa-times"></i>
                    </button>
                <% } %>
            </div>
            <div class="filters-row">
                <select id="filterStatus" onchange="applyFilters()" class="filter-select">
                    <option value="">Todos os Status</option>
                    <option value="published" <%= filters.status === 'published' ? 'selected' : '' %>>Publicados</option>
                    <option value="draft" <%= filters.status === 'draft' ? 'selected' : '' %>>Rascunhos</option>
                </select>
                <select id="filterCategoria" onchange="applyFilters()" class="filter-select">
                    <option value="">Todas as Categorias</option>
                    <% if (typeof categories !== 'undefined' && categories) { %>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.slug %>" <%= filters.categoria === cat.slug ? 'selected' : '' %>>
                                <%= cat.nome %>
                            </option>
                        <% }); %>
                    <% } %>
                </select>
                <button class="btn btn-secondary" onclick="clearFilters()">
                    <i class="fas fa-redo"></i> Limpar Filtros
                </button>
            </div>
        </div>

        <!-- Informações de Resultados -->
        <% if (typeof pagination !== 'undefined' && pagination) { %>
            <div class="results-info">
                <p>
                    Mostrando <%= articles.length %> de <%= pagination.totalPosts %> post(s)
                    <% if (filters.search) { %>
                        - Buscando por: "<strong><%= filters.search %></strong>"
                    <% } %>
                </p>
            </div>
        <% } %>

        <table class="data-table">
            <thead>
                <tr>
                    <th width="40">
                        <input type="checkbox" id="selectAll" onchange="toggleSelectAll(this)">
                    </th>
                    <th class="sortable" onclick="sortTable('titulo')">
                        Título
                        <% if (sort.sortBy === 'titulo') { %>
                            <i class="fas fa-sort-<%= sort.sortOrder === 'ASC' ? 'up' : 'down' %> sort-icon active"></i>
                        <% } else { %>
                            <i class="fas fa-sort sort-icon"></i>
                        <% } %>
                    </th>
                    <th>Categoria</th>
                    <th>Autor</th>
                    <th class="sortable" onclick="sortTable('visualizacoes')">
                        Visualizações
                        <% if (sort.sortBy === 'visualizacoes') { %>
                            <i class="fas fa-sort-<%= sort.sortOrder === 'ASC' ? 'up' : 'down' %> sort-icon active"></i>
                        <% } else { %>
                            <i class="fas fa-sort sort-icon"></i>
                        <% } %>
                    </th>
                    <th class="sortable" onclick="sortTable('dataPublicacao')">
                        Data
                        <% if (sort.sortBy === 'dataPublicacao') { %>
                            <i class="fas fa-sort-<%= sort.sortOrder === 'ASC' ? 'up' : 'down' %> sort-icon active"></i>
                        <% } else { %>
                            <i class="fas fa-sort sort-icon"></i>
                        <% } %>
                    </th>
                    <th class="sortable" onclick="sortTable('publicado')">
                        Status
                        <% if (sort.sortBy === 'publicado') { %>
                            <i class="fas fa-sort-<%= sort.sortOrder === 'ASC' ? 'up' : 'down' %> sort-icon active"></i>
                        <% } else { %>
                            <i class="fas fa-sort sort-icon"></i>
                        <% } %>
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% if (articles && articles.length > 0) { %>
                    <% 
                    // Criar mapa de nomes de categorias a partir das categorias carregadas 
                    const categoryNames = {}; 
                    if (typeof categories !== 'undefined' && categories) {
                        categories.forEach(cat => {
                            categoryNames[cat.slug] = cat.nome;
                        });
                    }
                %>
                <% articles.forEach(article => { %>
                    <tr>
                        <td>
                            <input type="checkbox" class="post-checkbox" value="<%= article.id %>"
                                onchange="updateDeleteButton()">
                        </td>
                        <td>
                            <div class="post-title">
                                <% if (article.destaque) { %>
                                    <span class="badge badge-warning">Destaque</span>
                                <% } %>
                                <%= article.titulo %>
                            </div>
                        </td>
                        <td><span class="badge badge-<%= article.categoria %>">
                                <%= categoryNames[article.categoria] || article.categoria %>
                            </span></td>
                        <td>
                            <%= article.autor %>
                        </td>
                        <td><i class="fas fa-eye"></i>
                            <%= article.visualizacoes %>
                        </td>
                        <td>
                            <%= new Date(article.dataPublicacao).toLocaleDateString('pt-BR') %>
                        </td>
                        <td>
                            <% if (article.publicado) { %>
                                <span class="badge badge-success">Publicado</span>
                            <% } else { 
                                // Verificar se é agendado (data futura)
                                const dataPublicacao = new Date(article.dataPublicacao);
                                const agora = new Date();
                                const isAgendado = dataPublicacao > agora;
                            %>
                                <% if (isAgendado) { 
                                    // Formatar horário: HH:MM
                                    const horario = dataPublicacao.toLocaleTimeString('pt-BR', { 
                                        hour: '2-digit', 
                                        minute: '2-digit',
                                        timeZone: 'America/Sao_Paulo'
                                    });
                                %>
                                    <span class="badge badge-warning" style="background: #FFC107; color: #000; font-size: 10px;">
                                        ⏰ <%= horario %>
                                    </span>
                                <% } else { %>
                                    <span class="badge badge-secondary">Rascunho</span>
                                <% } %>
                            <% } %>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <% if (article.publicado) { %>
                                    <a href="/<%= article.categoria %>/<%= article.urlAmigavel %>"
                                        target="_blank" class="btn-icon" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                <% } %>
                                <a href="/dashboard/posts/editar/<%= article.id %>" class="btn-icon"
                                    title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button onclick="deletePost(<%= article.id %>)"
                                    class="btn-icon btn-danger" title="Deletar">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="8" class="text-center">Nenhum post encontrado</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <!-- Paginação -->
        <% if (typeof pagination !== 'undefined' && pagination && pagination.totalPages > 1) { %>
            <div class="pagination-container">
                <div class="pagination-info">
                    Página <%= pagination.currentPage %> de <%= pagination.totalPages %>
                </div>
                <div class="pagination-buttons">
                    <% 
                        // Função helper para construir query string de paginação
                        const buildPaginationUrl = (page) => {
                            const params = [];
                            params.push(`page=${page}`);
                            if (filters.status) params.push(`status=${filters.status}`);
                            if (filters.categoria) params.push(`categoria=${filters.categoria}`);
                            if (filters.search) params.push(`search=${encodeURIComponent(filters.search)}`);
                            if (sort.sortBy) params.push(`sortBy=${sort.sortBy}`);
                            if (sort.sortOrder) params.push(`sortOrder=${sort.sortOrder}`);
                            return '?' + params.join('&');
                        };
                    %>
                    <% if (pagination.hasPrev) { %>
                        <a href="<%= buildPaginationUrl(1) %>" 
                           class="pagination-btn" title="Primeira página">
                            <i class="fas fa-angle-double-left"></i>
                        </a>
                        <a href="<%= buildPaginationUrl(pagination.currentPage - 1) %>" 
                           class="pagination-btn" title="Página anterior">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    <% } else { %>
                        <span class="pagination-btn disabled">
                            <i class="fas fa-angle-double-left"></i>
                        </span>
                        <span class="pagination-btn disabled">
                            <i class="fas fa-angle-left"></i>
                        </span>
                    <% } %>

                    <!-- Números de página -->
                    <% 
                        const startPage = Math.max(1, pagination.currentPage - 2);
                        const endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
                        for (let i = startPage; i <= endPage; i++) { 
                    %>
                        <% if (i === pagination.currentPage) { %>
                            <span class="pagination-btn active"><%= i %></span>
                        <% } else { %>
                            <a href="<%= buildPaginationUrl(i) %>" 
                               class="pagination-btn"><%= i %></a>
                        <% } %>
                    <% } %>

                    <% if (pagination.hasNext) { %>
                        <a href="<%= buildPaginationUrl(pagination.currentPage + 1) %>" 
                           class="pagination-btn" title="Próxima página">
                            <i class="fas fa-angle-right"></i>
                        </a>
                        <a href="<%= buildPaginationUrl(pagination.totalPages) %>" 
                           class="pagination-btn" title="Última página">
                            <i class="fas fa-angle-double-right"></i>
                        </a>
                    <% } else { %>
                        <span class="pagination-btn disabled">
                            <i class="fas fa-angle-right"></i>
                        </span>
                        <span class="pagination-btn disabled">
                            <i class="fas fa-angle-double-right"></i>
                        </span>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>
