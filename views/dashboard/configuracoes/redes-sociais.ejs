<script>
    function toggleConfig(platform) {
        const config = document.getElementById(`${platform}-config`);
        const icon = document.getElementById(`${platform}-toggle-icon`);
        
        config.classList.toggle('active');
        icon.classList.toggle('open');
    }

    async function saveConfig(event, platform) {
        event.preventDefault();
        
        const form = document.getElementById(`${platform}-form`);
        const formData = new FormData(form);
        const data = {};
        
        formData.forEach((value, key) => {
            data[key] = value;
        });
        
        // Checkbox handling
        data.ativo = document.getElementById(`${platform}-ativo`).checked;
        
        if (platform === 'facebook') {
            data.includeLink = document.getElementById('facebook-includeLink')?.checked ?? true;
        }
        
        try {
            const response = await fetch(`/api/social-media/${platform}/config`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            
            const result = await response.json();
            
            if (result.success) {
                showToast('Configura√ß√µes salvas com sucesso!', 'success');
                // Atualizar badge de status
                const badge = document.querySelector(`#${platform}-card .status-badge`);
                if (badge) {
                    badge.className = `status-badge ${data.ativo ? 'active' : 'inactive'}`;
                    badge.textContent = data.ativo ? 'Ativo' : 'Inativo';
                }
            } else {
                showToast(result.error || 'Erro ao salvar', 'error');
            }
        } catch (error) {
            showToast('Erro ao salvar configura√ß√µes', 'error');
        }
    }

    async function testConnection(platform) {
        showToast('Testando conex√£o...', 'info');
        
        try {
            const response = await fetch(`/api/social-media/${platform}/test`);
            const result = await response.json();
            
            if (result.success) {
                showToast(`Conex√£o com ${platform} v√°lida!`, 'success');
            } else {
                showToast(`Erro: ${result.error}`, 'error');
            }
        } catch (error) {
            showToast('Erro ao testar conex√£o', 'error');
        }
    }

    async function retryPost(postId) {
        if (!confirm('Deseja retentar esta postagem?')) return;
        
        try {
            const response = await fetch(`/api/social-media/posts/${postId}/retry`, {
                method: 'POST'
            });
            
            const result = await response.json();
            
            if (result.success) {
                showToast('Postagem realizada com sucesso!', 'success');
                setTimeout(() => location.reload(), 1500);
            } else {
                showToast(result.error || 'Erro ao retentar', 'error');
            }
        } catch (error) {
            showToast('Erro ao retentar postagem', 'error');
        }
    }

    function showToast(message, type = 'info') {
        // Remover toast existente
        const existingToast = document.querySelector('.toast');
        if (existingToast) existingToast.remove();
        
        const toast = document.createElement('div');
        toast.className = `toast ${type}`;
        toast.innerHTML = `
            <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'times-circle' : 'info-circle'}"></i>
            ${message}
        `;
        document.body.appendChild(toast);
        
        setTimeout(() => toast.remove(), 4000);
    }
</script>

