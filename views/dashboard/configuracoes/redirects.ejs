<script>
    // Fun√ß√£o de busca
    function buscar() {
        const search = document.getElementById('searchRedirects').value;
        const limit = document.getElementById('limitSelect').value;
        window.location.href = `/dashboard/configuracoes/redirects?search=${encodeURIComponent(search)}&limit=${limit}`;
    }
    
    // Fun√ß√£o para alterar limite de itens por p√°gina
    function alterarLimite() {
        const limit = document.getElementById('limitSelect').value;
        const search = document.getElementById('searchRedirects').value;
        const url = new URL(window.location.href);
        url.searchParams.set('limit', limit);
        url.searchParams.set('page', '1'); // Voltar para primeira p√°gina
        if (search) {
            url.searchParams.set('search', search);
        }
        window.location.href = url.toString();
    }
    
    // Enter para buscar
    document.getElementById('searchRedirects')?.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            buscar();
        }
    });
    
    // Abrir modal para novo redirecionamento
    function abrirModalNovo() {
        document.getElementById('modalTitle').textContent = 'Novo Redirecionamento';
        document.getElementById('formRedirect').reset();
        document.getElementById('redirectId').value = '';
        document.getElementById('ativo').checked = true;
        document.getElementById('modalRedirect').classList.add('active');
    }
    
    // Fechar modal
    function fecharModal() {
        document.getElementById('modalRedirect').classList.remove('active');
    }
    
    // Editar redirecionamento
    async function editarRedirect(id) {
        try {
            const response = await fetch(`/api/redirects/${id}`);
            const data = await response.json();
            
            if (data.success) {
                const redirect = data.redirect;
                document.getElementById('modalTitle').textContent = 'Editar Redirecionamento';
                document.getElementById('redirectId').value = redirect.id;
                document.getElementById('urlAntiga').value = redirect.urlAntiga;
                document.getElementById('urlNova').value = redirect.urlNova;
                document.getElementById('tipoRedirecionamento').value = redirect.tipoRedirecionamento;
                document.getElementById('descricao').value = redirect.descricao || '';
                document.getElementById('ativo').checked = redirect.ativo;
                document.getElementById('modalRedirect').classList.add('active');
            }
        } catch (error) {
            alert('Erro ao carregar redirecionamento');
        }
    }
    
    // Salvar redirecionamento
    async function salvarRedirect(event) {
        event.preventDefault();
        
        const id = document.getElementById('redirectId').value;
        const data = {
            urlAntiga: document.getElementById('urlAntiga').value,
            urlNova: document.getElementById('urlNova').value,
            tipoRedirecionamento: document.getElementById('tipoRedirecionamento').value,
            descricao: document.getElementById('descricao').value,
            ativo: document.getElementById('ativo').checked
        };
        
        try {
            const url = id ? `/api/redirects/${id}` : '/api/redirects';
            const method = id ? 'PUT' : 'POST';
            
            const response = await fetch(url, {
                method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            
            const result = await response.json();
            
            if (result.success) {
                alert(result.message);
                location.reload();
            } else {
                alert(result.message);
            }
        } catch (error) {
            alert('Erro ao salvar redirecionamento');
        }
    }
    
    // Toggle ativo/inativo
    async function toggleAtivo(id) {
        try {
            const response = await fetch(`/api/redirects/${id}/toggle`, {
                method: 'POST'
            });
            
            const result = await response.json();
            
            if (!result.success) {
                alert(result.message);
                location.reload();
            }
        } catch (error) {
            alert('Erro ao alterar status');
            location.reload();
        }
    }
    
    // Deletar redirecionamento
    async function deletarRedirect(id) {
        if (!confirm('Tem certeza que deseja deletar este redirecionamento?')) {
            return;
        }
        
        try {
            const response = await fetch(`/api/redirects/${id}`, {
                method: 'DELETE'
            });
            
            const result = await response.json();
            
            if (result.success) {
                alert(result.message);
                location.reload();
            } else {
                alert(result.message);
            }
        } catch (error) {
            alert('Erro ao deletar redirecionamento');
        }
    }
    
    // Modal Importar
    function abrirModalImportar() {
        document.getElementById('modalImportar').classList.add('active');
    }
    
    function fecharModalImportar() {
        document.getElementById('modalImportar').classList.remove('active');
    }
    
    // Importar CSV
    async function importarCSV() {
        const csv = document.getElementById('csvInput').value.trim();
        
        if (!csv) {
            alert('Cole o CSV antes de importar');
            return;
        }
        
        const lines = csv.split('\n');
        const redirects = [];
        
        for (const line of lines) {
            const [urlAntiga, urlNova, tipo, descricao] = line.split(',').map(s => s.trim());
            
            if (urlAntiga && urlNova) {
                redirects.push({
                    urlAntiga,
                    urlNova,
                    tipo: tipo || '301',
                    descricao: descricao || ''
                });
            }
        }
        
        if (redirects.length === 0) {
            alert('Nenhum redirecionamento v√°lido encontrado');
            return;
        }
        
        try {
            const response = await fetch('/api/redirects/import', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ redirects })
            });
            
            const result = await response.json();
            
            if (result.success) {
                alert(`${result.criados} redirecionamentos criados!\n${result.erros} erros.`);
                location.reload();
            } else {
                alert(result.message);
            }
        } catch (error) {
            alert('Erro ao importar redirecionamentos');
        }
    }
    
    // Fechar modal ao clicar fora
    window.onclick = function(event) {
        const modalRedirect = document.getElementById('modalRedirect');
        const modalImportar = document.getElementById('modalImportar');
        
        if (event.target === modalRedirect) {
            fecharModal();
        }
        
        if (event.target === modalImportar) {
            fecharModalImportar();
        }
    }
</script>

