<%- include('../partials/header', { title: 'Configura√ß√µes da IA', user: user }) %>

<div class="dashboard-content">
    <div class="content-header">
        <div>
            <h1>ü§ñ Configura√ß√µes da IA</h1>
            <p>Gerencie o assistente de intelig√™ncia artificial</p>
        </div>
        <a href="/dashboard/posts" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>

    <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> Configura√ß√µes atualizadas com sucesso!
    </div>
    <% } %>

    <div class="card">
        <div class="card-header">
            <h2>Configura√ß√µes do Together AI</h2>
        </div>
        <div class="card-body">
            <form action="/dashboard/ia/configuracoes" method="POST">
                <%
                const configMap = {};
                if (configs && configs.length > 0) {
                    configs.forEach(c => {
                        configMap[c.chave] = c.valor;
                    });
                }
                %>

                <!-- Status da IA -->
                <div class="status-toggle">
                    <div class="status-info">
                        <div class="status-icon">
                            <i class="fas fa-bolt"></i>
                        </div>
                        <div>
                            <label class="status-label">Status do Assistente de IA</label>
                            <p class="status-description">Ative ou desative o assistente para criar e corrigir mat√©rias</p>
                        </div>
                    </div>
                    <label class="toggle-switch">
                        <input type="checkbox" name="ia_ativa" value="true" <%= configMap.ia_ativa === 'true' ? 'checked' : '' %>>
                        <span class="toggle-slider"></span>
                        <span class="toggle-label"><%= configMap.ia_ativa === 'true' ? 'Ativo' : 'Inativo' %></span>
                    </label>
                </div>

                <div class="form-group">
                    <label for="ia_api_key">
                        <i class="fas fa-key"></i> API Key
                    </label>
                    <input 
                        type="text" 
                        name="ia_api_key" 
                        id="ia_api_key" 
                        class="form-control" 
                        value="<%= configMap.ia_api_key || '' %>"
                        required
                    >
                    <small class="form-text">Chave de API do Together AI</small>
                </div>

                <div class="form-group">
                    <label for="ia_api_url">
                        <i class="fas fa-link"></i> URL da API
                    </label>
                    <input 
                        type="url" 
                        name="ia_api_url" 
                        id="ia_api_url" 
                        class="form-control" 
                        value="<%= configMap.ia_api_url || 'https://api.together.xyz/v1/chat/completions' %>"
                        required
                    >
                    <small class="form-text">Endpoint da API do Together AI</small>
                </div>

                <div class="form-group">
                    <label for="ia_model">
                        <i class="fas fa-brain"></i> Modelo de IA
                    </label>
                    <select name="ia_model" id="ia_model" class="form-control" required>
                        <option value="meta-llama/Llama-3-70b-chat-hf" <%= configMap.ia_model === 'meta-llama/Llama-3-70b-chat-hf' ? 'selected' : '' %>>
                            Llama 3 70B (Recomendado)
                        </option>
                        <option value="meta-llama/Llama-3-8b-chat-hf" <%= configMap.ia_model === 'meta-llama/Llama-3-8b-chat-hf' ? 'selected' : '' %>>
                            Llama 3 8B (Mais r√°pido)
                        </option>
                        <option value="mistralai/Mixtral-8x7B-Instruct-v0.1" <%= configMap.ia_model === 'mistralai/Mixtral-8x7B-Instruct-v0.1' ? 'selected' : '' %>>
                            Mixtral 8x7B
                        </option>
                    </select>
                    <small class="form-text">Modelo de linguagem utilizado</small>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Salvar Configura√ß√µes
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="testarIA()">
                        <i class="fas fa-vial"></i> Testar IA
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h2>üìö Funcionalidades da IA</h2>
        </div>
        <div class="card-body">
            <div class="features-grid">
                <div class="feature-item">
                    <i class="fas fa-file-alt"></i>
                    <h3>Criar Mat√©rias</h3>
                    <p>Gere mat√©rias completas a partir de um tema</p>
                </div>
                <div class="feature-item">
                    <i class="fas fa-spell-check"></i>
                    <h3>Corrigir Textos</h3>
                    <p>Corrija erros de portugu√™s automaticamente</p>
                </div>
                <div class="feature-item">
                    <i class="fas fa-heading"></i>
                    <h3>Sugerir T√≠tulos</h3>
                    <p>Receba sugest√µes de t√≠tulos atrativos</p>
                </div>
                <div class="feature-item">
                    <i class="fas fa-align-left"></i>
                    <h3>Gerar Descri√ß√µes</h3>
                    <p>Crie descri√ß√µes curtas automaticamente</p>
                </div>
            </div>
        </div>
    </div>
</div>

