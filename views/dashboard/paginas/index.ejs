    }

    .badge-success { background: #D4EDDA; color: #155724; }
    .badge-secondary { background: #E2E3E5; color: #383D41; }

    .action-buttons {
        display: flex;
        gap: 6px;
    }

    .btn-icon {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        background: #F7FAFC;
        color: #718096;
        border: none;
        cursor: pointer;
        transition: all 0.15s;
        text-decoration: none;
        font-size: 13px;
    }

    .btn-icon:hover {
        background: #EDF2F7;
        color: #2D3748;
        transform: scale(1.05);
    }

    .btn-icon.btn-danger:hover {
        background: #FEE2E2;
        color: #DC2626;
    }

    .text-center {
        text-align: center;
        padding: 32px !important;
        color: #9CA3AF;
        font-size: 13px;
    }
</style>

<script>
    // Inicializar SortableJS
    const el = document.getElementById('sortableList');
    const sortable = Sortable.create(el, {
        handle: '.drag-handle',
        animation: 150,
        ghostClass: 'sortable-ghost',
        chosenClass: 'sortable-chosen',
        onEnd: function() {
            // Mostrar botão de salvar quando houver mudança
            document.getElementById('saveOrderBtn').style.display = 'inline-flex';
        }
    });

    function salvarOrdem() {
        const rows = document.querySelectorAll('#sortableList tr[data-id]');
        const ordem = Array.from(rows).map(row => ({
            id: row.getAttribute('data-id')
        }));

        const btn = document.getElementById('saveOrderBtn');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Salvando...';
        btn.disabled = true;

        fetch('/dashboard/paginas/reordenar', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ ordem })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Ordem atualizada com sucesso!');
                btn.style.display = 'none';
            } else {
                alert('Erro ao salvar ordem: ' + (data.error || 'Erro desconhecido'));
            }
        })
        .catch(error => {
            console.error('Erro:', error);
            alert('Erro ao salvar ordem');
        })
        .finally(() => {
            btn.innerHTML = originalText;
            btn.disabled = false;
        });
    }

    // Filtro de busca
    document.getElementById('searchPaginas').addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('.data-table tbody tr');
        
        rows.forEach(row => {
            const titulo = row.querySelector('td:nth-child(2)')?.textContent.toLowerCase() || '';
            const slug = row.querySelector('td:nth-child(3)')?.textContent.toLowerCase() || '';
            
            if (titulo.includes(searchTerm) || slug.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    function deletarPagina(id, titulo) {
        if (confirm(`Tem certeza que deseja deletar a página "${titulo}"?`)) {
            fetch(`/dashboard/paginas/${id}`, {
                method: 'DELETE'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erro ao deletar página');
                }
            });
        }
    }
</script>

