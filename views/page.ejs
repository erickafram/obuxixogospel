<%- include('partials/admin-bar', { user: user }) %>
<%- include('partials/header', { title: page.titulo }) %>

<div class="page-container">
    <div class="page-content">
        <div class="page-header">
            <h1><%= page.titulo %></h1>
            <% if (page.descricao) { %>
            <p class="page-description"><%= page.descricao %></p>
            <% } %>
        </div>
        
        <div class="page-body">
            <%- page.conteudo %>
        </div>

        <% if (form && form.ativo) { %>
        <!-- Formulário Dinâmico -->
        <div class="page-form-container">
            <div class="page-form">
                <% if (form.nome) { %>
                <h3 class="form-title"><%= form.nome %></h3>
                <% } %>
                <% if (form.descricao) { %>
                <p class="form-description"><%= form.descricao %></p>
                <% } %>
                
                <form id="dynamicForm" class="dynamic-form" onsubmit="return submitForm(event)">
                    <input type="hidden" name="formId" value="<%= form.id %>">
                    <input type="hidden" name="paginaOrigem" value="<%= page.slug %>">
                    
                    <% const campos = form.campos || []; %>
                    <% campos.forEach(campo => { %>
                    <div class="form-field">
                        <label for="field_<%= campo.name %>">
                            <%= campo.label %>
                            <% if (campo.required) { %><span class="required">*</span><% } %>
                        </label>
                        
                        <% if (campo.type === 'textarea') { %>
                        <textarea 
                            id="field_<%= campo.name %>" 
                            name="<%= campo.name %>" 
                            placeholder="<%= campo.placeholder || '' %>"
                            <%= campo.required ? 'required' : '' %>
                            rows="4"
                        ></textarea>
                        
                        <% } else if (campo.type === 'select') { %>
                        <select 
                            id="field_<%= campo.name %>" 
                            name="<%= campo.name %>"
                            <%= campo.required ? 'required' : '' %>
                        >
                            <option value="">Selecione...</option>
                            <% (campo.options || []).forEach(opt => { %>
                            <option value="<%= opt %>"><%= opt %></option>
                            <% }); %>
                        </select>
                        
                        <% } else if (campo.type === 'radio') { %>
                        <div class="radio-group">
                            <% (campo.options || []).forEach((opt, idx) => { %>
                            <label class="radio-label">
                                <input type="radio" name="<%= campo.name %>" value="<%= opt %>" <%= campo.required && idx === 0 ? '' : '' %>>
                                <span><%= opt %></span>
                            </label>
                            <% }); %>
                        </div>
                        
                        <% } else if (campo.type === 'checkbox') { %>
                        <div class="checkbox-group">
                            <% (campo.options || []).forEach(opt => { %>
                            <label class="checkbox-label">
                                <input type="checkbox" name="<%= campo.name %>[]" value="<%= opt %>">
                                <span><%= opt %></span>
                            </label>
                            <% }); %>
                        </div>
                        
                        <% } else { %>
                        <input 
                            type="<%= campo.type %>" 
                            id="field_<%= campo.name %>" 
                            name="<%= campo.name %>" 
                            placeholder="<%= campo.placeholder || '' %>"
                            <%= campo.required ? 'required' : '' %>
                        >
                        <% } %>
                    </div>
                    <% }); %>
                    
                    <div class="form-submit">
                        <button type="submit" class="btn-submit" id="submitBtn">
                            <span class="btn-text"><%= form.textoBotao || 'Enviar' %></span>
                            <span class="btn-loading" style="display: none;">
                                <i class="fas fa-spinner fa-spin"></i> Enviando...
                            </span>
                        </button>
                    </div>
                </form>
                
                <div id="formSuccess" class="form-success" style="display: none;">
                    <i class="fas fa-check-circle"></i>
                    <p><%= form.mensagemSucesso || 'Formulário enviado com sucesso!' %></p>
                </div>
                
                <div id="formError" class="form-error" style="display: none;">
                    <i class="fas fa-exclamation-circle"></i>
                    <p id="errorMessage">Erro ao enviar formulário. Tente novamente.</p>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

<style>
    body {
        background: #FFFFFF !important;
    }
    
    .page-container {
        max-width: 1248px;
        margin: 0 auto;
        padding: 100px 20px 60px 20px;
        min-height: calc(100vh - 200px);
    }
    
    .page-content {
        background: white;
        border-radius: 12px;
        padding: 40px;
    }
    
    .page-header {
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #E2E8F0;
    }
    
    .page-header h1 {
        font-size: 32px;
        font-weight: 700;
        color: #1A202C;
        margin: 0 0 10px 0;
        line-height: 1.2;
    }
    
    .page-description {
        font-size: 16px;
        color: #718096;
        margin: 0;
        line-height: 1.6;
    }
    
    .page-body {
        font-size: 16px;
        line-height: 1.8;
        color: #2D3748;
    }
    
    .page-body h2 {
        font-size: 24px;
        font-weight: 600;
        color: #1A202C;
        margin: 30px 0 15px 0;
    }
    
    .page-body h3 {
        font-size: 20px;
        font-weight: 600;
        color: #2D3748;
        margin: 25px 0 12px 0;
    }
    
    .page-body p {
        margin-bottom: 16px;
    }
    
    .page-body ul, .page-body ol {
        margin: 16px 0;
        padding-left: 30px;
    }
    
    .page-body li {
        margin-bottom: 8px;
    }
    
    .page-body a {
        color: #0669de;
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: all 0.2s;
    }
    
    .page-body a:hover {
        border-bottom-color: #0669de;
    }
    
    .page-body strong {
        font-weight: 600;
        color: #1A202C;
    }
    
    .page-body em {
        font-style: italic;
        color: #718096;
    }
    
    @media (max-width: 768px) {
        .page-container {
            padding: 80px 15px 40px 15px;
        }
        
        .page-content {
            padding: 25px 20px;
        }
        
        .page-header h1 {
            font-size: 26px;
        }
        
        .page-body {
            font-size: 15px;
        }
        
        .page-body h2 {
            font-size: 21px;
        }
        
        .page-body h3 {
            font-size: 18px;
        }
    }

    /* Formulário Dinâmico */
    .page-form-container {
        margin-top: 40px;
        padding-top: 30px;
        border-top: 2px solid #E2E8F0;
    }

    .page-form {
        max-width: 600px;
    }

    .form-title {
        font-size: 22px;
        font-weight: 600;
        color: #1A202C;
        margin: 0 0 8px 0;
    }

    .form-description {
        font-size: 14px;
        color: #718096;
        margin: 0 0 24px 0;
    }

    .dynamic-form .form-field {
        margin-bottom: 20px;
    }

    .dynamic-form label {
        display: block;
        font-size: 14px;
        font-weight: 500;
        color: #2D3748;
        margin-bottom: 6px;
    }

    .dynamic-form label .required {
        color: #E53E3E;
        margin-left: 2px;
    }

    .dynamic-form input[type="text"],
    .dynamic-form input[type="email"],
    .dynamic-form input[type="tel"],
    .dynamic-form input[type="number"],
    .dynamic-form input[type="date"],
    .dynamic-form textarea,
    .dynamic-form select {
        width: 100%;
        padding: 12px 14px;
        border: 1px solid #E2E8F0;
        border-radius: 8px;
        font-size: 14px;
        font-family: inherit;
        transition: all 0.15s;
        background: white;
    }

    .dynamic-form input:focus,
    .dynamic-form textarea:focus,
    .dynamic-form select:focus {
        outline: none;
        border-color: #0669de;
        box-shadow: 0 0 0 3px rgba(6, 105, 222, 0.1);
    }

    .dynamic-form textarea {
        resize: vertical;
        min-height: 100px;
    }

    .radio-group,
    .checkbox-group {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .radio-label,
    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
        font-weight: 400 !important;
    }

    .radio-label input,
    .checkbox-label input {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .form-submit {
        margin-top: 24px;
    }

    .btn-submit {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 14px 32px;
        background: linear-gradient(135deg, #0669de 0%, #3d8bfd 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.15s;
        min-width: 150px;
    }

    .btn-submit:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(6, 105, 222, 0.3);
    }

    .btn-submit:disabled {
        opacity: 0.7;
        cursor: not-allowed;
        transform: none;
    }

    .form-success,
    .form-error {
        padding: 20px;
        border-radius: 8px;
        text-align: center;
    }

    .form-success {
        background: #D4EDDA;
        color: #155724;
    }

    .form-success i {
        font-size: 32px;
        margin-bottom: 10px;
        display: block;
    }

    .form-error {
        background: #F8D7DA;
        color: #721C24;
    }

    .form-error i {
        font-size: 32px;
        margin-bottom: 10px;
        display: block;
    }

    @media (max-width: 768px) {
        .page-form-container {
            margin-top: 30px;
            padding-top: 24px;
        }

        .form-title {
            font-size: 20px;
        }

        .btn-submit {
            width: 100%;
        }
    }
</style>

<script>
    function submitForm(event) {
        event.preventDefault();
        
        const form = document.getElementById('dynamicForm');
        const submitBtn = document.getElementById('submitBtn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        const formSuccess = document.getElementById('formSuccess');
        const formError = document.getElementById('formError');
        const errorMessage = document.getElementById('errorMessage');
        
        // Coletar dados do formulário
        const formData = new FormData(form);
        const dados = {};
        const formId = formData.get('formId');
        const paginaOrigem = formData.get('paginaOrigem');
        
        // Processar campos
        for (let [key, value] of formData.entries()) {
            if (key !== 'formId' && key !== 'paginaOrigem') {
                // Tratar campos de checkbox (arrays)
                if (key.endsWith('[]')) {
                    const cleanKey = key.slice(0, -2);
                    if (!dados[cleanKey]) {
                        dados[cleanKey] = [];
                    }
                    dados[cleanKey].push(value);
                } else {
                    dados[key] = value;
                }
            }
        }
        
        // Mostrar loading
        btnText.style.display = 'none';
        btnLoading.style.display = 'inline-flex';
        submitBtn.disabled = true;
        formError.style.display = 'none';
        
        // Enviar para API
        fetch('/api/formularios/submeter', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                formId: parseInt(formId),
                dados: dados,
                paginaOrigem: paginaOrigem
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                form.style.display = 'none';
                formSuccess.style.display = 'block';
            } else {
                errorMessage.textContent = data.error || 'Erro ao enviar formulário. Tente novamente.';
                formError.style.display = 'block';
            }
        })
        .catch(error => {
            console.error('Erro:', error);
            errorMessage.textContent = 'Erro ao enviar formulário. Tente novamente.';
            formError.style.display = 'block';
        })
        .finally(() => {
            btnText.style.display = 'inline';
            btnLoading.style.display = 'none';
            submitBtn.disabled = false;
        });
        
        return false;
    }
</script>

<%- include('partials/footer') %>
