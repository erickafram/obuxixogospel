<%- include('partials/admin-bar', { user: user }) %>
<%- include('partials/header', { title: page.titulo }) %>

<div class="page-container">
    <div class="page-content">
        <div class="page-header">
            <h1><%= page.titulo %></h1>
            <% if (page.descricao) { %>
            <p class="page-description"><%= page.descricao %></p>
            <% } %>
        </div>
        
        <div class="page-body">
            <%- page.conteudo %>
        </div>
    </div>
</div>

<style>
    body {
        background: #FFFFFF !important;
    }
    
    .page-container {
        max-width: 1248px;
        margin: 0 auto;
        padding: 100px 20px 60px 20px;
        min-height: calc(100vh - 200px);
    }
    
    .page-content {
        background: white;
        border-radius: 12px;
        padding: 40px;
    }
    
    .page-header {
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #E2E8F0;
    }
    
    .page-header h1 {
        font-size: 32px;
        font-weight: 700;
        color: #1A202C;
        margin: 0 0 10px 0;
        line-height: 1.2;
    }
    
    .page-description {
        font-size: 16px;
        color: #718096;
        margin: 0;
        line-height: 1.6;
    }
    
    .page-body {
        font-size: 16px;
        line-height: 1.8;
        color: #2D3748;
    }
    
    .page-body h2 {
        font-size: 24px;
        font-weight: 600;
        color: #1A202C;
        margin: 30px 0 15px 0;
    }
    
    .page-body h3 {
        font-size: 20px;
        font-weight: 600;
        color: #2D3748;
        margin: 25px 0 12px 0;
    }
    
    .page-body p {
        margin-bottom: 16px;
    }
    
    .page-body ul, .page-body ol {
        margin: 16px 0;
        padding-left: 30px;
    }
    
    .page-body li {
        margin-bottom: 8px;
    }
    
    .page-body a {
        color: #0669de;
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: all 0.2s;
    }
    
    .page-body a:hover {
        border-bottom-color: #0669de;
    }
    
    .page-body strong {
        font-weight: 600;
        color: #1A202C;
    }
    
    .page-body em {
        font-style: italic;
        color: #718096;
    }
    
    @media (max-width: 768px) {
        .page-container {
            padding: 80px 15px 40px 15px;
        }
        
        .page-content {
            padding: 25px 20px;
        }
        
        .page-header h1 {
            font-size: 26px;
        }
        
        .page-body {
            font-size: 15px;
        }
        
        .page-body h2 {
            font-size: 21px;
        }
        
        .page-body h3 {
            font-size: 18px;
        }
    }
</style>

<%- include('partials/footer') %>
