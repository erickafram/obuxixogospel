<%- include('partials/header') %>

    <main class="main-content author-page">
        <!-- Hero do Autor -->
        <div class="author-hero">
            <div class="author-hero-bg"></div>
            <div class="container">
                <div class="author-profile-card">
                    <div class="author-avatar-wrapper">
                        <div class="author-avatar">
                            <img src="<%= author.image %>" alt="<%= author.name %>"
                                onerror="this.src='/images/default-user.png'">
                        </div>
                        <div class="author-avatar-ring"></div>
                    </div>
                    <div class="author-info">
                        <span class="author-role">
                            <i class="fas fa-pen-fancy"></i>
                            <%= author.role %>
                        </span>
                        <h1 class="author-name"><%= author.name %></h1>
                        <p class="author-bio"><%= author.bio %></p>
                        
                        <div class="author-stats">
                            <div class="stat-item">
                                <span class="stat-number"><%= articles ? articles.length : 0 %></span>
                                <span class="stat-label">Matérias</span>
                            </div>
                        </div>

                        <% if (author.social && Object.keys(author.social).length > 0) { %>
                            <div class="author-social">
                                <% if (author.social.instagram) { %>
                                    <a href="<%= author.social.instagram %>" target="_blank" rel="noopener" title="Instagram" class="social-btn instagram">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                <% } %>
                                <% if (author.social.twitter) { %>
                                    <a href="<%= author.social.twitter %>" target="_blank" rel="noopener" title="Twitter" class="social-btn twitter">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                <% } %>
                                <% if (author.social.linkedin) { %>
                                    <a href="<%= author.social.linkedin %>" target="_blank" rel="noopener" title="LinkedIn" class="social-btn linkedin">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                <% } %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de Artigos do Autor -->
        <div class="container">
            <div class="author-articles-section">
                <div class="section-header-author">
                    <h2 class="section-title-author">
                        <i class="fas fa-newspaper"></i>
                        Matérias publicadas
                    </h2>
                    <% if (articles && articles.length > 0) { %>
                        <span class="articles-count"><%= articles.length %> artigo<%= articles.length > 1 ? 's' : '' %></span>
                    <% } %>
                </div>

                <% if (articles && articles.length > 0) { %>
                    <div class="author-posts-grid">
                        <% articles.forEach((article, index) => { %>
                            <article class="author-post-card" style="animation-delay: <%= index * 0.1 %>s">
                                <a href="/<%= article.categoria %>/<%= article.urlAmigavel %>" class="post-link">
                                    <div class="post-image-wrapper">
                                        <img src="<%= article.imagem %>" alt="<%= article.titulo %>" loading="lazy">
                                        <div class="post-overlay"></div>
                                        <span class="post-category <%= article.categoria %>">
                                            <%= article.categoria %>
                                        </span>
                                    </div>
                                    <div class="post-content">
                                        <h3 class="post-title"><%= article.titulo %></h3>
                                        <div class="post-meta">
                                            <span class="post-date">
                                                <i class="far fa-calendar-alt"></i>
                                                <%= new Date(article.dataPublicacao).toLocaleDateString('pt-BR', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                                            </span>
                                        </div>
                                    </div>
                                </a>
                            </article>
                        <% }); %>
                    </div>

                    <!-- Paginação -->
                    <% if (totalPages > 1) { %>
                        <nav class="pagination-wrapper" aria-label="Paginação">
                            <div class="pagination">
                                <% if (currentPage > 1) { %>
                                    <a href="?page=<%= currentPage - 1 %>" class="page-btn prev" aria-label="Página anterior">
                                        <i class="fas fa-chevron-left"></i>
                                        <span>Anterior</span>
                                    </a>
                                <% } %>
                                
                                <div class="page-numbers">
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <% if (i === currentPage) { %>
                                            <span class="page-number active" aria-current="page"><%= i %></span>
                                        <% } else if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) { %>
                                            <a href="?page=<%= i %>" class="page-number"><%= i %></a>
                                        <% } else if (i === currentPage - 2 || i === currentPage + 2) { %>
                                            <span class="page-dots">...</span>
                                        <% } %>
                                    <% } %>
                                </div>
                                
                                <% if (currentPage < totalPages) { %>
                                    <a href="?page=<%= currentPage + 1 %>" class="page-btn next" aria-label="Próxima página">
                                        <span>Próxima</span>
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                <% } %>
                            </div>
                        </nav>
                    <% } %>

                <% } else { %>
                    <div class="no-results">
                        <div class="no-results-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <h3>Nenhuma matéria encontrada</h3>
                        <p>Este autor ainda não publicou nenhuma matéria.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <style>
        /* ===== PÁGINA DE AUTOR - LAYOUT MODERNO ===== */
        .author-page {
            padding: 0;
            background: #f8f9fa;
        }

        /* Hero Section */
        .author-hero {
            position: relative;
            padding: 60px 0 40px;
            background: linear-gradient(135deg, #FF6B00 0%, #E65100 50%, #c44500 100%);
            overflow: hidden;
        }

        .author-hero-bg {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            opacity: 0.5;
        }

        /* Profile Card */
        .author-profile-card {
            position: relative;
            display: flex;
            align-items: center;
            gap: 40px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Avatar */
        .author-avatar-wrapper {
            position: relative;
            flex-shrink: 0;
        }

        .author-avatar {
            position: relative;
            z-index: 2;
        }

        .author-avatar img {
            width: 160px;
            height: 160px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid #fff;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

        .author-avatar-ring {
            position: absolute;
            top: -8px;
            left: -8px;
            right: -8px;
            bottom: -8px;
            border-radius: 50%;
            border: 3px dashed #FF6B00;
            opacity: 0.3;
            animation: rotate 20s linear infinite;
        }

        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* Author Info */
        .author-info {
            flex: 1;
        }

        .author-role {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, #FF6B00, #E65100);
            color: #fff;
            padding: 8px 16px;
            border-radius: 25px;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 15px;
        }

        .author-role i {
            font-size: 11px;
        }

        .author-name {
            font-size: 36px;
            font-weight: 800;
            margin: 0 0 12px 0;
            color: #1a1a1a;
            line-height: 1.2;
        }

        .author-bio {
            font-size: 16px;
            color: #555;
            line-height: 1.7;
            margin-bottom: 20px;
            max-width: 600px;
        }

        /* Stats */
        .author-stats {
            display: flex;
            gap: 30px;
            margin-bottom: 20px;
            padding: 15px 0;
            border-top: 1px solid #eee;
            border-bottom: 1px solid #eee;
        }

        .stat-item {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .stat-number {
            font-size: 28px;
            font-weight: 800;
            color: #FF6B00;
            line-height: 1;
        }

        .stat-label {
            font-size: 13px;
            color: #777;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 5px;
        }

        /* Social Links */
        .author-social {
            display: flex;
            gap: 12px;
        }

        .social-btn {
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            font-size: 18px;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .social-btn.instagram {
            background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
            color: #fff;
        }

        .social-btn.twitter {
            background: #1DA1F2;
            color: #fff;
        }

        .social-btn.linkedin {
            background: #0077B5;
            color: #fff;
        }

        .social-btn:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        /* Articles Section */
        .author-articles-section {
            padding: 50px 0;
        }

        .section-header-author {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #eee;
        }

        .section-title-author {
            font-size: 24px;
            font-weight: 700;
            color: #1a1a1a;
            display: flex;
            align-items: center;
            gap: 12px;
            margin: 0;
        }

        .section-title-author i {
            color: #FF6B00;
            font-size: 20px;
        }

        .articles-count {
            background: #f0f0f0;
            color: #666;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
        }

        /* Posts Grid */
        .author-posts-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
        }

        .author-post-card {
            background: #fff;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
            transition: all 0.3s ease;
            animation: fadeInUp 0.5s ease forwards;
            opacity: 0;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .author-post-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
        }

        .author-post-card .post-link {
            display: block;
            text-decoration: none;
        }

        .post-image-wrapper {
            position: relative;
            height: 200px;
            overflow: hidden;
        }

        .post-image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .author-post-card:hover .post-image-wrapper img {
            transform: scale(1.08);
        }

        .post-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to top, rgba(0,0,0,0.4) 0%, transparent 50%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .author-post-card:hover .post-overlay {
            opacity: 1;
        }

        .author-post-card .post-category {
            position: absolute;
            top: 15px;
            left: 15px;
            padding: 6px 14px;
            border-radius: 8px;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            color: #fff;
            background: #1a1a1a;
            letter-spacing: 0.5px;
        }

        .author-post-card .post-content {
            padding: 20px;
        }

        .author-post-card .post-title {
            font-size: 17px;
            font-weight: 700;
            line-height: 1.4;
            color: #1a1a1a;
            margin: 0 0 12px 0;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            transition: color 0.3s ease;
        }

        .author-post-card:hover .post-title {
            color: #FF6B00;
        }

        .author-post-card .post-meta {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .author-post-card .post-date {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 13px;
            color: #888;
        }

        .author-post-card .post-date i {
            color: #FF6B00;
            font-size: 12px;
        }

        /* Pagination */
        .pagination-wrapper {
            margin-top: 50px;
            display: flex;
            justify-content: center;
        }

        .pagination {
            display: flex;
            align-items: center;
            gap: 10px;
            background: #fff;
            padding: 12px 20px;
            border-radius: 50px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .page-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: #FF6B00;
            color: #fff;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .page-btn:hover {
            background: #E65100;
            transform: translateY(-2px);
        }

        .page-numbers {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .page-number {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 600;
            color: #666;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .page-number:hover {
            background: #f0f0f0;
            color: #FF6B00;
        }

        .page-number.active {
            background: #FF6B00;
            color: #fff;
        }

        .page-dots {
            color: #999;
            padding: 0 5px;
        }

        /* No Results */
        .no-results {
            text-align: center;
            padding: 80px 20px;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
        }

        .no-results-icon {
            width: 80px;
            height: 80px;
            background: #f5f5f5;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .no-results-icon i {
            font-size: 32px;
            color: #ccc;
        }

        .no-results h3 {
            font-size: 20px;
            color: #333;
            margin: 0 0 10px 0;
        }

        .no-results p {
            font-size: 15px;
            color: #777;
            margin: 0;
        }

        /* Responsive */
        @media (max-width: 992px) {
            .author-posts-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 768px) {
            .author-hero {
                padding: 40px 0 30px;
            }

            .author-profile-card {
                flex-direction: column;
                text-align: center;
                padding: 30px 20px;
                gap: 25px;
            }

            .author-avatar img {
                width: 130px;
                height: 130px;
            }

            .author-name {
                font-size: 28px;
            }

            .author-bio {
                font-size: 15px;
                margin-left: auto;
                margin-right: auto;
            }

            .author-stats {
                justify-content: center;
            }

            .author-social {
                justify-content: center;
            }

            .section-header-author {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .author-posts-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .pagination {
                flex-wrap: wrap;
                justify-content: center;
                border-radius: 20px;
                padding: 15px;
            }

            .page-btn span {
                display: none;
            }

            .page-btn {
                padding: 10px 15px;
            }
        }
    </style>

    <%- include('partials/footer') %>